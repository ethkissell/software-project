      <div class="carousel-inner">
        {{#each info}}
        {{#if @first}}
        <div class="carousel-item active container" id="carousel-item-1">
          <div class = "row">
            <img src={{this.snippet.thumbnails.maxres.url}} class="d-block w-50 mx-auto" alt="thumbnail">
          </div>
          <div class = "row">
             <div class="col-md-6 mx-auto">
              <div class="card bg-transparent border-0" >
              <h5 class="card-title" style="color:white; ">First Video Watched</h5>
                <div class="card-body">
                  <p class="card-text" style="color:white; "> {{this.snippet.title}} <a href="">With Dummy Link!</a></p>
              </div>
            </div>
             </div>
          </div>      
        </div>
        {{/if}}
        {{#if @last}}
        <div class="carousel-item container" id="carousel-item-2">
           <div class = "row">
            <img src={{this.snippet.thumbnails.maxres.url}} class="d-block w-50 mx-auto" alt="thumbnail">
           </div>
            <div class = "row">
               <div class="col-md-6 mx-auto">
                <div class="card bg-transparent border-0">
                  <h5 class="card-title" style="color:white; ">Last Video Watched</h5>
                  <div class="card-body">
                    <p class="card-text" style="color:white; ">{{this.snippet.title}}</p>
                  </div>
                </div>
               </div>
            </div>
        </div>
        {{/if}}
        {{/each}}
        <div class="carousel-item container" id="carousel-item-3">
           <div class = "row">
            <img src={{mostWatched.snippet.thumbnails.maxres.url}} class="d-block w-50 mx-auto" alt="thumbnail">
           </div>
            <div class = "row">
               <div class="col-md-6 mx-auto">
                <div class="card bg-transparent border-0">
                  <h5 class="card-title" style="color:white; ">Most Watched Video</h5>
                  <div class="card-body">
                    <p class="card-text" style="color:white; ">{{mostWatched.snippet.title}}</p>
                    <a href="/vidStats" class="btn btn-primary" id="url" style="border: #000000; background-color:black">More Video Stats Here!</a>
                  </div>
                </div>
               </div>
            </div>
        </div>
      </div>
      <div>
       <button class="carousel-control-prev" type="button" href="#projectCarousel" data-bs-slide="prev" id="carousel-next">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
       </button>
       <button class="carousel-control-next" type="button" href="#projectCarousel" data-bs-slide="next" id="carousel-next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
       </button>
